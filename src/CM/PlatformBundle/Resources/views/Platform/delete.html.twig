{# src/ISC/PlatformBundle/Resources/views/Platform/actu.html.twig #}

{% extends "::index.html.twig" %}

{% block title %}
    {{ parent() }} - Suppréssion du profil de {{ client.nom }} {{ client.prenom }}
{% endblock %}

{% block bsFile %}
    {{ parent() }}
{% endblock %}

{% block contentBody %}
    {{ parent() }}
    <div class="row" style="text-align:center;">
        <div class="btn-group">
            <a href="{{ path('cm_platform_list') }}" class="btn btn-primary" role="button">
                <i class="fa fa-chevron-left" aria-hidden="true"></i> Retour à la liste</i>
            </a>
            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-primary" role="button">
                <i class="fa fa-sign-out" aria-hidden="true"> Déconnexion</i>
            </a>
        </div>
    </div>
    <br />
    <div class="well">
        <h2>Supprimer un client</h2>

        <p>
            Etes-vous certain de vouloir supprimer le client "{{ client.nom }} {{ client.prenom }}" du carnet d'adresse ?
        </p>

        {# On met l'id de l'annonce dans la route de l'action du formulaire #}
        <form action="{{ path('cm_platform_delete', {'id': client.id}) }}" method="post">
            <a href="{{ path('cm_platform_view', {'id': client.id}) }}" class="btn btn-default">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Retour au profil client
            </a>
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            {{ form_rest(form) }}
        </form>
    </div>
    <!-- Site footer -->
    <footer class="footer">
        <p>&copy; {{ 'now'|date('Y') }} ClientManager</p>
    </footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
